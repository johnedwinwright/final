<%= simple_form_for(@vehicle) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :plate_number %>
    <%= f.input :make %>
    <%= f.input :model %>
    <%= f.input :color %>
    <%= f.input :year %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
